  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["api/src/**/*", "hooks/src/**/*", "types/src/**/*"],
  "exclude": ["node_modules"]
}
